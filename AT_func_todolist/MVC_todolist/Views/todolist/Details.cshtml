@model MVC_todolist.Models.ListaModel

@{
    ViewData["Title"] = "detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Informações da tarefa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nome da tarefa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeTarefa)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataTarefa)
        </dd>
        <dt class = "col-sm-2">
            Detalhes
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detalhes)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Responsável
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Responsavel)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit") <img src="~/Assets/Img/pencil.svg" class="img" fill="currentColor" alt="Editar" /> |
    <a asp-action="Index">Voltar para a lista</a>
</div>
